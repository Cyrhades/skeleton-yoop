{
    "name": "yoop/skeleton",
    "type": "project",
    "license": "MIT",
    "description": "Squelette pour cr√©ation d'une web application avec Yoop",
    "minimum-stability": "dev",
    "autoload" : {
        "psr-4" : {
            "App\\" : "src/"     
        }
    },
    "repositories":[
        {
            "type": "package",
            "package": {
                "name": "cyrhades/yoop",
                "version" : "1.3",
                "source": {
                    "url": "https://github.com/Cyrhades/yoop.git",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-4": { "Yoop\\": ["src/"] }
                }
            }
        }
    ],    
    "scripts": {
        "post-install-cmd": [
            "php -r \"if(!file_exists('app/config.php'))copy('app/config.php.example', 'app/config.php');\""
        ],
        "post-update-cmd": [
            "php -r \"if(!file_exists('app/config.php'))copy('app/config.php.example', 'app/config.php');\""
        ]
    },
    "require": {
        "cyrhades/yoop": "^1.3",
        "twig/twig": "^3.0",
        "nikic/fast-route": "^1.3" 
    },
    "require-dev": {
        "symfony/var-dumper": "^5.1"
    }
}
